//getRadio
public double getRadio () {
	return this.r;

 }
//Metodo set
public void setRadio(double radio){
	this.r=radio;
}

//Area
 public double area () {
	;
	return pi*this.r*this.r;
	
 }
//Perimetro
public double perimetro () {
	double result = 0;
	result = 2*pi*this.r;
	return result;
 }

